# =============================================================================
# Buttercup CMS Backend - .gitignore
# =============================================================================

# -----------------------------------------------------------------------------
# Python bytecode / caches
# -----------------------------------------------------------------------------
__pycache__/
*.py[cod]
*$py.class
*.so
.Python
.pytest_cache/
.mypy_cache/
.ruff_cache/
.pyright/
.cache/

# -----------------------------------------------------------------------------
# Build / packaging
# -----------------------------------------------------------------------------
build/
develop-eggs/
dist/
downloads/
eggs/
.eggs/
lib/
lib64/
parts/
sdist/
var/
wheels/
pip-wheel-metadata/
*.egg-info/
.installed.cfg
*.egg

# -----------------------------------------------------------------------------
# Virtual environments
# -----------------------------------------------------------------------------
venv/
# ENV/
# env/
.venv/

# -----------------------------------------------------------------------------
# IDE / Editor
# -----------------------------------------------------------------------------
.idea/
.vscode/
*.swp
*.swo
*~
.project
.pydevproject
.settings/
*.sublime-project
*.sublime-workspace

# -----------------------------------------------------------------------------
# Testing / coverage
# -----------------------------------------------------------------------------
.tox/
.nox/
.coverage
.coverage.*
htmlcov/
nosetests.xml
coverage.xml
*.cover
*.py,cover
.hypothesis/

# -----------------------------------------------------------------------------
# Environment / secrets
# -----------------------------------------------------------------------------
.env
.env.local
.env.*.local
!.env.example

# -----------------------------------------------------------------------------
# Logs
# -----------------------------------------------------------------------------
logs/
*.log
*.log.*

# -----------------------------------------------------------------------------
# Uploads (keep folder via .gitkeep)
# -----------------------------------------------------------------------------
uploads/*
!uploads/.gitkeep

# -----------------------------------------------------------------------------
# Database / dumps
# -----------------------------------------------------------------------------
*.db
*.sqlite
*.sqlite3
*.sql
*.dump

# -----------------------------------------------------------------------------
# Docker runtime data (keep compose files tracked)
# -----------------------------------------------------------------------------
docker/mysql/data/
**/mysql/data/
**/postgres/data/

# -----------------------------------------------------------------------------
# OS files
# -----------------------------------------------------------------------------
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# -----------------------------------------------------------------------------
# Misc temp / backups
# -----------------------------------------------------------------------------
*.bak
*.tmp
*.temp
*.cache

# -----------------------------------------------------------------------------
# Security keys / certs (NEVER commit)
# -----------------------------------------------------------------------------
*.pem
*.key
*.crt
*.pfx
*.p12
