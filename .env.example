# =============================================================================
# BUTTERCUP HOME PAGE CMS BACKEND - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=Buttercup CMS
APP_ENV=dev
# Options: dev, staging, prod
DEBUG=true
HOST=0.0.0.0
PORT=8000

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# MySQL connection string format: mysql+pymysql://user:password@host:port/database
# URL-encode special characters in password (e.g., @ = %40, # = %23)
DATABASE_URL=mysql+pymysql://root:SAdhi%40%23123@127.0.0.1:3306/buttercup

# DDL Auto Behavior (similar to Spring Boot's ddl-auto)
# Options:
#   create - Drop all tables and recreate (DANGEROUS - dev only)
#   update - Run Alembic migrations to latest (recommended for production)
#   none   - Do nothing on startup (manual migration control)
DB_DDL_AUTO=update

# Database pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:5500

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
UPLOAD_DIR=uploads
MAX_UPLOAD_MB=10
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp,image/svg+xml

# Static files URL prefix
STATIC_URL_PREFIX=/static

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log
LOG_FORMAT=json
# Options: json, text
LOG_MAX_BYTES=10485760
# 10MB
LOG_BACKUP_COUNT=5

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_V1_PREFIX=/api/v1

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# Request timeout in seconds
REQUEST_TIMEOUT=60
